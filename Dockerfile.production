# Production Agent Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY self-learning-agent/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install Playwright browsers
RUN playwright install chromium && \
    playwright install-deps chromium

# Copy crawl4ai-agent dependency (now inside self-learning-agent)
COPY self-learning-agent/crawl4ai-agent /app/crawl4ai-agent

# Set Python path to include crawl4ai-agent
ENV PYTHONPATH="${PYTHONPATH}:/app/crawl4ai-agent"

# Copy application code (selective to avoid symlink)
COPY self-learning-agent/config.py self-learning-agent/gemini_client.py self-learning-agent/llm_adapters.py self-learning-agent/production_agent.py ./
COPY self-learning-agent/agents/ ./agents/
COPY self-learning-agent/algorithms/ ./algorithms/
COPY self-learning-agent/knowledge/ ./knowledge/

# Create frozen resources directory
RUN mkdir -p /app/frozen_resources

EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

CMD ["python", "production_agent.py"]
